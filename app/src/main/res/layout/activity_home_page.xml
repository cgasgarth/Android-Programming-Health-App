<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcomeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="Testing Commit"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/goalPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toGoals"
                android:text="Goal Page" />

            <Button
                android:id="@+id/Recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Recommendations"
                android:text="Recommendations" />

            <Button
                android:id="@+id/Alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toAlarm"
                android:text="Alarms" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Journal"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:onClick="DailyJournal"
                android:text="DailyJournal" />

            <Button
                android:id="@+id/Progress"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:onClick="ProgressTracker"
                android:text="ProgressTracker" />

            <Button
                android:id="@+id/QID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="qidPage"
                android:text="QID" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updatePassButton"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="updatePassword"
            android:text="Update Password" />

        <Button
            android:id="@+id/calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="Calender"
            android:text="Calender" />
    </LinearLayout>

    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Logout"
        android:text="Logout" />

</LinearLayout>
